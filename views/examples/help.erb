      <label for="feeling">How are you feeling about this?</label>
      <fieldset>
        <p>
          <input type="radio" name="feeling" id="feeling_1" checked>
          <label for="feeling_1">Great</label>
        </p>

        <p>
          <input type="radio" name="feeling" id="feeling_2">
          <label for="feeling_2">Good</label>  
        </p>
        
        <p>
          <input type="radio" name="feeling" id="feeling_3">
          <label for="feeling_3">Okay</label>    
        </p>
        
        <p>
          <input type="radio" name="feeling" id="feeling_4">
          <label for="feeling_4">Bad</label>    
        </p>
      </fieldset>
      

      <label for="question">What's going on?</label>
      <textarea name="question"></textarea>

      <div class="callout">
        <input type="submit" class="btn primary medium" value="Make it better">
      </div>
    </form>
  </div>

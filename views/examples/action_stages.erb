<script type="text/javascript">
  $(document).ready(function() {
    // lets hide this guy once the user has had a chance to see it
    $(".messages").delay(3000).slideUp();

    var locFinder = window.DSLocationFinder();
    locFinder.initialize({
      mode: "select",
      endpoint: "/example-data.json?q="
    });

    $(".js-action-stage-complete").click(function(e) {
      e.preventDefault();
      $(".messages").slideUp();

      console.log("FEEEEEE");
      var thisStep = $(this).closest(".action--stage");

      thisStep.find(".action--widget").slideUp();

      thisStep.removeClass("action--stage-active");
      thisStep.addClass("action--stage-inactive");

      thisStep.next(".action--stage").removeClass("action--stage-inactive");

      thisStep.find(".is-hidden-until-step-complete").hide();
    });

    $(".js-change-location").click(function() {
      console.log("ROLLIN' IT BACK");
      $(".action--stage").addClass("action--stage-inactive");
      $((".action--stage")).removeClass("action--stage-active");

      var thisStep = $(this).closest(".action--stage");
      console.log(thisStep);

      //thisStep.css("background", "red");
      thisStep.removeClass("action--stage-complete");
      thisStep.removeClass("action--stage-inactive");
      thisStep.addClass("action--stage-active");
      thisStep.find(".action--widget").slideDown();

    });

    $(".is-hidden-until-step-complete").hide();

    $(".js-location-finder-delegate").change(function() {
      console.log("YOU PICKED IT");
      var thisStep = $(this).closest(".action--stage");

      $(".js-action-result").text($(this).attr("data-name"));


      $(".is-hidden-until-step-complete").show();
    });

    $(".action--stage-inactive").click(function() {
      var thisStep = $(this);

      $(".action--stage").removeClass("action--stage-active");
      $(".action--stage").addClass("action--stage-inactive");

      thisStep.removeClass("action--stage-inactive");
      thisStep.addClass("action--stage-active");

      $(".action--stage-inactive").click(function() {});
    });

  });
</script>

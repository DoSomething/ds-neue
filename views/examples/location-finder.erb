
<div class="page-width">
  <div class="row section callout">
    <h1>Location Finder</h1>
    <div id="locfinder">
      NOPE.
    </div>
  </div>
</div>

<script type="text/template" id="template--locfinder-geo">
  <div class="row">
    <a class="js-location-finder-submit btn primary medium">Search Near Me</a>
  </div>
  <div class="row"><p class="callout legal">(or <a href="#" class="js-location-finder-toggle-form">search by zip code</a>)</p></div>
</script>

<script type="text/template" id="template--locfinder-zip">
  <form action="#" class="js-location-finder-form row">
    <input id="searchQuery" type="text" maxlength="5" class="short" placeholder="zip code">
    <a class="js-location-finder-submit btn primary medium">Submit</a>
  </form>
  <div class="row"><p class="callout legal">(or <a href="#" class="js-location-finder-toggle-form">search nearby</a>)</p></div>
</script>

<script type="text/template" id="template--locfinder-result">
  <strong>{{name}}</strong><br>
  {{street}}<br>
  {{city}}, {{state}} {{zip}}<br>
</script>

<script type="text/javascript">
  window.DS.LocationFinder.initialize($("#locfinder"), {});
</script>
